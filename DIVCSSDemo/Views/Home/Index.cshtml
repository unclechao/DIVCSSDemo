<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<link href="~/Style/headingBar.css" rel="stylesheet" />
<link href="~/Style/loginArea.css" rel="stylesheet" />
<script src="~/JS/jquery-1.8.2.js"></script>
<script src="~/JS/headingBar.js"></script>
<script src="~/JS/loginArea.js"></script>

@{
    ViewBag.Title = "Index";
}

<body>
    <div class="top-nav">
        <div class="tn-header">
            <div class="tn-nav">
                @*left area*@
                <div class="tn-title">
                    <a class="tn-tab">设为首页</a>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">手机新浪网</a>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">移动客户端  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>新浪微博</li>
                            <li>新浪新闻</li>
                            <li>新浪体育</li>
                            <li>新浪娱乐</li>
                            <li>新浪财经</li>
                            <li>天气通</li>
                            <li>新浪游戏</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="tn-close">
                @*hidden area*@
            </div>
            <div class="tn-person-r">
                @*right area*@
                <div class="tn-title">
                    <a class="tn-tab" id="login">登录</a>
                    <div class="login-area">

                        <div class="login-list">
                            <div class="login-list-left">
                                <div class="right-remind" style="text-align :center">扫描二维码安全登录</div>
                                <div class="right-content"></div>
                            </div>
                            <div class="login-list-right">
                                <div class="right-remind">新浪微博、博客、邮箱帐号，请直接登录</div>
                                <div class="right-content">
                                    <table>
                                        <tr>
                                            <td>
                                                <input type="text" id="email" name="email" autocomplete="off" />
                                                <div id="auto-show"></div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input type="text" id="password" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <input id="btn_login" type="button" value="   登 录   " />&nbsp;&nbsp;&nbsp;
                                                <input type="checkbox" id="chk_remember" style="height:30px;vertical-align:bottom;margin-bottom:-1px" />
                                                <label style="display:inline;font-size:12px;height:30px">下次自动登录</label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <a href="">忘记密码</a>&nbsp;&nbsp;&nbsp;<a href="">立即注册</a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">微博  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>私信</li>
                            <li>评论</li>
                            <li>@@我</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">博客  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>博客评论</li>
                            <li>未读提醒</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">邮箱  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>免费邮箱</li>
                            <li>VIP邮箱</li>
                            <li>企业邮箱</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">网站导航</a>
                </div>
            </div>
        </div>
    </div>
</body>