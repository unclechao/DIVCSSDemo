@{
    ViewBag.Title = "Index";
}

<body>
    <div class="top-nav">
        <div class="tn-header">
            <div class="tn-nav">
                @*left area*@
                <div class="tn-title">
                    <a class="tn-tab">设为首页</a>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">手机新浪网</a>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">移动客户端  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>新浪微博</li>
