                    </div>
                </div>
            </div>
            <div class="tn-close">
                @*hidden area*@
            </div>
            <div class="tn-person-r">
                @*right area*@
                <div class="tn-title">
                    <a class="tn-tab">登录</a>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">微博  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>私信</li>
                            <li>评论</li>
                            <li>@@我</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">博客  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>博客评论</li>
                            <li>未读提醒</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">邮箱  ↓</a>
                    <div class="tn-topmenulist">
                        <ul class="tn-text-list">
                            <li>免费邮箱</li>
                            <li>VIP邮箱</li>
                            <li>企业邮箱</li>
                        </ul>
                    </div>
                </div>
                <div class="tn-title">
                    <a class="tn-tab">网站导航</a>
                </div>
            </div>
        </div>
    </div>
